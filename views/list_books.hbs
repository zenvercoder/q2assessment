<section class="books">
    <h2>Books</h2>
    <ul>
        {{#each books}}
            <li class="book">
                <figure>
                    <img src="{{this.cover_url}}" alt="{{this.title}} book cover"/>
                </figure>
                <div class="details">
                    <h3>{{this.title}}</h3>
                    <span class="genre">{{this.genre}}</span>
                    <p>{{this.description}}</p>
                    <a href="/books/delete/{{id}}"><i class="delete fa fa-remove"></i></a>
                </div>
            </li>
        {{/each}}
    </ul>
    <a class="add" href="books/new">Add a Book</a>
</section>