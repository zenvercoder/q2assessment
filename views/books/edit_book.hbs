<section>
    <form method="POST" action="/books/{{book.id}}?_method=PUT">
        <h2>Edit a Book</h2>
        <label for="book-title">Title</label>
        <input type="text" maxlength="255" required name="title" id="book-title" value="{{book.title}}">

        <label for="book-genre">Genre</label>
        <input type="text" maxlength="255" required name="genre" id="book-genre" value="{{book.genre}}">

        <label for="cover_image_url">Cover Image URL</label>
        <input type="url" maxlength="255" required name="cover_image_url" id="cover_image_url"
               value="{{book.cover_image_url}}"/>

        <label for="book-description">Description</label>
        <textarea maxlength="2000" required name="description" id="book-description">{{book.description}}</textarea>

        <input type="submit" value="Edit Book"/>
    </form>

    <div class="remove-item">
        <h2>{{book.title}}'s Authors</h2>
        <ul>
            {{#each book.authors}}
                <li>
                    <form method="POST" action="/books/{{../book.id}}/authors/{{id}}?_method=DELETE">
                        <span>{{first_name}}{{last_name}}</span>
                        <button type="submit">
                            <i class="delete fa fa-remove"></i>
                        </button>
                    </form>
                </li>
            {{/each}}
        </ul>
    </div>

    <form class="add-item" method="POST" action="/books/{{book.id}}/authors">
        <h2>Add a Author to {{book.title}}</h2>
        <select name="author_id">
            {{#each authors}}
                <option value="{{id}}">{{first_name}}{{last_name}}</option>
            {{/each}}
        </select>
        <input type="submit" value="Add Author"/>
    </form>
</section>

