<form method="POST" action="/books">
    <h2>Add a Book</h2>
    <label for="book-title">Title</label>
    <input type="text" maxlength="255" required name="title" id="book-title">

    <label for="book-genre">Genre</label>
    <input type="text" maxlength="255" required name="genre" id="book-genre">

    <label for="cover_image_url">Cover Image URL</label>
    <input type="url" maxlength="255" required name="cover_image_url" id="cover_image_url"/>

    <label for="book-description">Description</label>
    <textarea maxlength="2000" required name="description" id="book-description"></textarea>

    <input type="submit" value="Add Book"/>

</form>