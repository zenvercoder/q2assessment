<section class="books">
            <div class="book">
                <figure>
                    <img src="{{books.cover_url}}" alt="{{books.title}} book cover"/>
                </figure>
                <div class="details">
                    <h3>{{books.title}}</h3>
                    <ul class="authors">
                        {{#each book.authors}}
                            <li><a href="/authors/{{id}}">{{first_name}}{{last_name}}</a></li>
                        {{/each}}
                    </ul>
                    <span class="genre">{{books.genre}}</span>
                    <p>{{books.description}}</p>
                    <div class="actions">
                        <a href="/books/edit/{{books.id}}"><i class="edit fa fa-pencil"></i></a>
                        <a href="/books/delete/{{books.id}}"><i class="delete fa fa-remove"></i></a>
                    </div>
                </div>
            </div>
</section>